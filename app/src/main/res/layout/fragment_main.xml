<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_frag_layout"
    android:layout_width="350dp"
    android:layout_height="260dp"
    android:layout_gravity="center_horizontal"
    android:background="@color/color_card_white_theme"
    tools:context=".view.main.MainFragment">

    <LinearLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/color_card_white_theme"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/temp_pic_layout"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:id="@+id/temp_layout"
                android:layout_width="wrap_content"
                android:layout_height="81dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <TextView
                    android:id="@+id/temp_pointer_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/temp_pointer_plus"
                    android:textColor="@color/color_text_white_theme"
                    android:textSize="@dimen/size_text_large"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/main_weather_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/temperature_default"
                    android:textColor="@color/color_text_white_theme"
                    android:textSize="@dimen/size_text_large"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/temp_type_view"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:text="@string/temperature_cel"
                    android:textColor="@color/color_text_white_theme"
                    android:textSize="@dimen/size_text_medium"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                android:id="@+id/image_view_card"
                android:layout_width="94dp"
                android:layout_height="81dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                tools:ignore="ContentDescription"
                tools:srcCompat="@tools:sample/avatars" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/info_layout"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/weather_type_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="@string/weather_type_cold"
                android:textColor="@color/color_text_white_theme"
                android:textSize="@dimen/size_text_medium" />

            <TextView
                android:id="@+id/city_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="@string/name_city"
                android:textColor="@color/color_text_white_theme"
                android:textSize="@dimen/size_text_medium_plus"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>

